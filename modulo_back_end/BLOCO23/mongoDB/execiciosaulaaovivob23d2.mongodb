// 7. Ordenar por diretor e título em ordem alfabética, ano em forma
// decrescente, avaliacao.bom em order decrescente. (Esconder
// avaliacao.ruim e avaliacao.medio)

use ("class");
db.filmes.find({}, 
{ "avaliacao.ruim": 0, 
"avaliacao.medio": 0 })
.sort({diretor: 1, titulo: 1, ano: -1, "avaliacao.bom": -1});
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

